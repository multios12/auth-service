{
    // IntelliSense を使用して利用可能な属性を学べます。
    // 既存の属性の説明をホバーして表示します。
    // 詳細情報は次を確認してください: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "compounds": [
      {
        "name": "Debug for chrome and API Server",
        "configurations": [
          "front server",
          "API server",
        ]
      }
    ],  
    "configurations": [
        {
            "name": "front server",
            "type": "pwa-chrome",
            "request": "launch",
            "url": "http://localhost",
            "webRoot": "${workspaceFolder}",
            "preLaunchTask": "react-start",
            "postDebugTask": "terminate-react-start",
        },
        {
            "name": "API server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "server/.",
            "args": [
                "-port",
                ":3001",
                "-filename",
                "./testdata/setting.json"
            ]
        }
    ]
}